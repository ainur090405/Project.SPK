<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <style>
        body {
            font-family: Inter, Arial, sans-serif;
            background: #f6f8fb;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0
        }
        
        .card {
            background: #fff;
            width: 400px;
            border-radius: 16px;
            box-shadow: 0 4px 12px rgba(0, 0, 0, .1);
            padding: 24px 28px
        }
        
        h2 {
            text-align: center;
            margin: 0 0 10px
        }
        
        .toggle {
            text-align: center;
            margin-bottom: 16px
        }
        
        .toggle button {
            border: none;
            background: none;
            color: #2563eb;
            cursor: pointer;
            font-weight: 600
        }
        
        label {
            display: block;
            margin: 8px 0 4px;
            font-size: 14px
        }
        
        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 15px
        }
        
        .btn {
            margin-top: 14px;
            width: 100%;
            padding: 10px;
            background: #2563eb;
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 15px;
            transition: background .2s ease
        }
        
        .btn:hover {
            background: #1d4ed8
        }
        
        .err {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
            padding: 8px;
            border-radius: 8px;
            margin-bottom: 10px;
            text-align: center
        }
        
        .ok {
            background: #dcfce7;
            color: #166534;
            border: 1px solid #bbf7d0;
            padding: 8px;
            border-radius: 8px;
            margin-bottom: 10px;
            text-align: center
        }
        
        .hidden {
            display: none
        }
        
        .toast-wrap {
            position: fixed;
            top: 22px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 3;
            display: flex;
            flex-direction: column;
            gap: 10px;
            pointer-events: none
        }
        
        .toast {
            pointer-events: auto;
            display: flex;
            gap: 10px;
            align-items: center;
            justify-content: center;
            min-width: 260px;
            max-width: 520px;
            padding: 10px 14px;
            border-radius: 12px;
            border: 1px solid;
            background: #ffffff;
            color: #0f172a;
            border-color: #dbeafe;
            box-shadow: var(--shadow);
            animation: toast-in .25s ease, toast-out .25s ease 4.6s forwards
        }
        
        .toast-success {
            border-color: #86efac;
            background: #ecfdf5;
            color: #065f46
        }
        
        .toast-error {
            border-color: #fca5a5;
            background: #fef2f2;
            color: #7f1d1d
        }
        
        .toast .close {
            margin-left: 10px;
            background: transparent;
            border: 0;
            cursor: pointer;
            color: inherit;
            font-size: 18px;
            opacity: .8
        }
        
        .toast .close:hover {
            opacity: 1
        }
        
        @keyframes toast-in {
            from {
                opacity: 0;
                transform: translateY(-6px)
            }
            to {
                opacity: 1;
                transform: translateY(0)
            }
        }
        
        @keyframes toast-out {
            to {
                opacity: 0;
                transform: translateY(-6px)
            }
        }
        
        @media (max-width:520px) {
            .subtitle {
                font-size: 14px
            }
            .meta {
                font-size: 13px
            }
        }
    </style>
</head>

<body>
    <div class="card">
        <h2 id="title">
            <%= (tab === 'register') ? 'Register' : 'Login' %>
        </h2>

        <div class="toggle">
            <button type="button" id="showLogin">Login</button> |
            <button type="button" id="showRegister">Register</button>
        </div>

        <div class="toast-wrap" id="toastWrap">
            <% const s = (typeof messages !== 'undefined' && messages.success) ? messages.success : []; %>
                <% const e = (typeof messages !== 'undefined' && messages.error) ? messages.error : []; %>

                    <% if (s.length) { %>
                        <div class="toast toast-success">
                            ✅ <span><%= s[0] %></span>
                            <button class="close" aria-label="Tutup" onclick="this.parentElement.remove()">×</button>
                        </div>
                        <% } %>

                            <% if (e.length) { %>
                                <div class="toast toast-error">
                                    ⚠️ <span><%= e[0] %></span>
                                    <button class="close" aria-label="Tutup" onclick="this.parentElement.remove()">×</button>
                                </div>
                                <% } %>
        </div>

        <!-- LOGIN -->
        <form id="loginForm" method="post" action="/logres/login" class="<%= (tab === 'register') ? 'hidden' : '' %>">
            <label>Email</label>
            <input type="email" name="email" required>

            <label>Password</label>
            <input type="password" name="password" required>

            <button class="btn" type="submit">Masuk</button>
        </form>

        <!-- REGISTER -->
        <form id="registerForm" method="post" action="/logres/register" class="<%= (tab === 'register') ? '' : 'hidden' %>">
            <label>Nama</label>
            <input type="text" name="nama" required>

            <label>Email</label>
            <input type="email" name="email" required>

            <label>Password</label>
            <input type="password" name="password" minlength="6" required>

            <button class="btn" type="submit">Daftar</button>
        </form>
    </div>

    <script>
        const loginForm = document.getElementById('loginForm');
        const registerForm = document.getElementById('registerForm');
        const title = document.getElementById('title');

        document.getElementById('showLogin').onclick = () => {
            loginForm.classList.remove('hidden');
            registerForm.classList.add('hidden');
            title.textContent = 'Login';
        };
        document.getElementById('showRegister').onclick = () => {
            loginForm.classList.add('hidden');
            registerForm.classList.remove('hidden');
            title.textContent = 'Register';
        };
    </script>
</body>

</html>