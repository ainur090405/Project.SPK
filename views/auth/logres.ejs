<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  :root {
    --bg-gradient: linear-gradient(135deg, #0f172a 0%, #1e293b 40%, #0f172a 100%);
    --glass-bg: rgba(255, 255, 255, 0.08);
    --border-glass: rgba(255, 255, 255, 0.15);
    --text-primary: #f9fafb;
    --text-secondary: #9ca3af;
    --accent: #10b981;
    --accent-hover: #34d399;
    --radius: 14px;
    --blur: 20px;
    --shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    --transition: all 0.3s ease;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: 'Inter', sans-serif;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--bg-gradient);
    background-attachment: fixed;
    overflow: hidden;
    color: var(--text-primary);
  }

  /* Background glow dekoratif */
  body::before {
    content: "";
    position: absolute;
    width: 700px;
    height: 700px;
    background: radial-gradient(circle, rgba(16,185,129,0.25), transparent 70%);
    top: -150px;
    right: -150px;
    filter: blur(100px);
    z-index: 0;
  }

  /* === Card Login Glass === */
  .card {
    position: relative;
    z-index: 5;
    width: 400px;
    background: var(--glass-bg);
    border: 1px solid var(--border-glass);
    backdrop-filter: blur(var(--blur));
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    padding: 32px 36px;
    color: var(--text-primary);
    text-align: left;
    animation: cardAppear 0.8s cubic-bezier(0.25, 1, 0.3, 1) forwards;
  }

  @keyframes cardAppear {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.97);
      filter: blur(6px);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0);
    }
  }

  h2 {
    text-align: center;
    margin: 0 0 20px;
    font-weight: 600;
    font-size: 1.6rem;
    letter-spacing: 0.5px;
  }

  .toggle {
    text-align: center;
    margin-bottom: 20px;
  }

  .toggle button {
    background: none;
    border: none;
    color: var(--accent);
    font-weight: 600;
    cursor: pointer;
    transition: color 0.2s ease;
  }

  .toggle button:hover {
    color: var(--accent-hover);
  }

  label {
    display: block;
    margin: 10px 0 6px;
    font-size: 14px;
    color: var(--text-secondary);
  }

  input {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: var(--radius);
    background: rgba(255,255,255,0.05);
    color: #fff;
    font-size: 15px;
    transition: var(--transition);
  }

  input:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(16,185,129,0.3);
    background: rgba(255,255,255,0.1);
  }

  /* === Buttons === */
  .btn {
    width: 100%;
    padding: 12px;
    margin-top: 18px;
    border: none;
    border-radius: var(--radius);
    background: var(--accent);
    color: #fff;
    font-weight: 600;
    cursor: pointer;
    font-size: 15px;
    transition: var(--transition);
    box-shadow: 0 0 14px rgba(16,185,129,0.25);
  }

  .btn:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 0 25px rgba(52,211,153,0.35);
  }

  .btn:active {
    transform: translateY(0);
  }

  /* === Error & Success === */
  .err, .ok {
    padding: 10px;
    border-radius: var(--radius);
    margin-bottom: 12px;
    text-align: center;
    font-weight: 500;
  }

  .err {
    background: rgba(239,68,68,0.15);
    border: 1px solid rgba(239,68,68,0.3);
    color: #fca5a5;
  }

  .ok {
    background: rgba(16,185,129,0.15);
    border: 1px solid rgba(16,185,129,0.3);
    color: #6ee7b7;
  }

  /* === Animasi form switch === */
  form {
    animation: fadeSwitch 0.5s ease;
  }

  @keyframes fadeSwitch {
    from {
      opacity: 0;
      transform: translateY(10px) scale(0.98);
      filter: blur(5px);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0);
    }
  }

  .hidden {
    display: none;
  }

  /* === Toasts === */
  .toast-wrap {
    position: fixed;
    top: 22px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 10px;
    pointer-events: none;
  }

  .toast {
    pointer-events: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    min-width: 260px;
    padding: 10px 16px;
    border-radius: var(--radius);
    background: rgba(255,255,255,0.15);
    color: #fff;
    border: 1px solid rgba(255,255,255,0.2);
    backdrop-filter: blur(8px);
    animation: toastIn .3s ease, toastOut .3s ease 4.6s forwards;
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }

  .toast-success {
    border-left: 4px solid var(--accent);
  }

  .toast-error {
    border-left: 4px solid #ef4444;
  }

  .toast .close {
    background: transparent;
    border: 0;
    cursor: pointer;
    color: #fff;
    font-size: 18px;
    opacity: 0.7;
    margin-left: 10px;
  }

  .toast .close:hover { opacity: 1; }

  @keyframes toastIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes toastOut {
    0% { opacity: 1; transform: translateY(0); }
    100% { opacity: 0; transform: translateY(-10px); }
  }

  @media (max-width: 480px) {
    .card {
      width: 90%;
      padding: 24px 20px;
    }
  }
</style>
</head>

<body>
  <div class="card">
    <h2 id="title"><%= (tab === 'register') ? 'Register' : 'Login' %></h2>

    <div class="toggle">
      <button type="button" id="showLogin">Login</button> |
      <button type="button" id="showRegister">Register</button>
    </div>

    <div class="toast-wrap" id="toastWrap">
      <% const s = (typeof messages !== 'undefined' && messages.success) ? messages.success : []; %>
      <% const e = (typeof messages !== 'undefined' && messages.error) ? messages.error : []; %>

      <% if (s.length) { %>
        <div class="toast toast-success">
          ✅ <span><%= s[0] %></span>
          <button class="close" aria-label="Tutup" onclick="this.parentElement.remove()">×</button>
        </div>
      <% } %>

      <% if (e.length) { %>
        <div class="toast toast-error">
          ⚠️ <span><%= e[0] %></span>
          <button class="close" aria-label="Tutup" onclick="this.parentElement.remove()">×</button>
        </div>
      <% } %>
    </div>

    <!-- LOGIN -->
    <form id="loginForm" method="post" action="/logres/login" class="<%= (tab === 'register') ? 'hidden' : '' %>">
      <label>Email</label>
      <input type="email" name="email" required>

      <label>Password</label>
      <input type="password" name="password" required>

      <button class="btn" type="submit">Masuk</button>
    </form>

    <!-- REGISTER -->
    <form id="registerForm" method="post" action="/logres/register" class="<%= (tab === 'register') ? '' : 'hidden' %>">
      <label>Nama</label>
      <input type="text" name="nama" required>

      <label>Email</label>
      <input type="email" name="email" required>

      <label>Password</label>
      <input type="password" name="password" minlength="6" required>

      <button class="btn" type="submit">Daftar</button>
    </form>
  </div>

  <script>
    const loginForm = document.getElementById('loginForm');
    const registerForm = document.getElementById('registerForm');
    const title = document.getElementById('title');

    document.getElementById('showLogin').onclick = () => {
      loginForm.classList.remove('hidden');
      registerForm.classList.add('hidden');
      title.textContent = 'Login';
    };
    document.getElementById('showRegister').onclick = () => {
      loginForm.classList.add('hidden');
      registerForm.classList.remove('hidden');
      title.textContent = 'Register';
    };
  </script>
</body>
</html>
