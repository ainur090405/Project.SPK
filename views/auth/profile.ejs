<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8" />
    <title>
        <%= title %>
    </title>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

    :root {
      --bg-gradient: linear-gradient(135deg, #0f172a 0%, #1e293b 40%, #0f172a 100%);
      --glass-bg: rgba(255, 255, 255, 0.08);
      --border-glass: rgba(255, 255, 255, 0.15);
      --text-primary: #f9fafb;
      --text-secondary: #9ca3af;
      --accent: #10b981;
      --accent-hover: #34d399;
      --danger: #ef4444;
      --radius: 16px;
      --blur: 20px;
      --shadow: 0 10px 30px rgba(0, 0, 0, 0.45);
      --transition: all 0.3s ease;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      min-height: 100vh;
      background: var(--bg-gradient);
      color: var(--text-primary);
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 40px 20px;
      background-attachment: fixed;
    }

    /* Glow Background */
    body::before {
      content: "";
      position: fixed;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(16, 185, 129, 0.25), transparent 70%);
      top: -100px;
      right: -100px;
      filter: blur(100px);
      z-index: 0;
    }

    .container {
      max-width: 980px;
      width: 100%;
      position: relative;
      z-index: 5;
      animation: fadeInUp 0.7s ease both;
    }

    .card {
      background: var(--glass-bg);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      border: 1px solid var(--border-glass);
      backdrop-filter: blur(var(--blur));
      overflow: hidden;
      transition: var(--transition);
    }

    .card:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
    }

    .card-head {
      display: flex;
      gap: 16px;
      align-items: center;
      padding: 22px 26px;
      background: rgba(255, 255, 255, 0.06);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .avatar {
      width: 60px;
      height: 60px;
      border-radius: 999px;
      display: grid;
      place-items: center;
      background: var(--accent);
      color: #fff;
      font-weight: 800;
      font-size: 22px;
      flex: 0 0 auto;
      box-shadow: 0 0 15px rgba(16, 185, 129, 0.4);
    }

    .head-meta {
      flex: 1 1 auto;
    }

    .title {
      margin: 0;
      color: #fff;
      font-size: 26px;
      line-height: 1.2;
    }

    .pill {
      display: inline-block;
      margin-left: 8px;
      padding: 0.25rem 0.7rem;
      border-radius: 999px;
      background: rgba(255, 255, 255, 0.15);
      color: var(--accent-hover);
      font-size: 12px;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .sub {
      margin: 4px 0 0;
      color: var(--text-secondary);
    }

    .btn {
      background: var(--accent);
      color: #fff;
      border: none;
      border-radius: 10px;
      padding: 10px 14px;
      cursor: pointer;
      transition: var(--transition);
      box-shadow: 0 0 10px rgba(16, 185, 129, 0.3);
    }

    .btn:hover {
      background: var(--accent-hover);
      transform: translateY(-2px);
      box-shadow: 0 0 20px rgba(52, 211, 153, 0.35);
    }

    .btn-ghost {
      background: transparent;
      color: #fff;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .btn-ghost:hover {
      background: rgba(255, 255, 255, 0.15);
    }

    .btn-small {
      padding: 6px 10px;
      font-size: 13px;
    }

    .btn-link {
      background: transparent;
      color: var(--accent);
      border: 0;
      cursor: pointer;
      transition: 0.2s ease;
    }

    .btn-link:hover {
      color: var(--accent-hover);
    }

    .card-body {
      padding: 26px;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 18px;
    }

    .info-block {
      padding: 16px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.04);
    }

    .label {
      color: var(--text-secondary);
      font-size: 13px;
    }

    .value {
      color: #fff;
      font-weight: 600;
      margin-top: 4px;
    }

    .divider {
      height: 1px;
      background: rgba(255, 255, 255, 0.1);
      margin: 24px 0;
    }

    .actions {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      align-items: center;
    }

    .actions a {
      text-decoration: none;
    }

    .back {
      background: rgba(239, 68, 68, 0.15);
      color: #fca5a5;
      border: 1px solid rgba(239, 68, 68, 0.3);
      border-radius: 10px;
      padding: 10px 14px;
      transition: 0.3s ease;
    }

    .back:hover {
      background: rgba(239, 68, 68, 0.25);
    }

    /* Collapse (Ubah Password) */
    .collapse {
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.04);
      padding: 16px;
      display: none;
      animation: fadeInUp 0.4s ease;
    }

    .collapse.open {
      display: block;
    }

    .legend {
      font-weight: 700;
      color: #fff;
      margin-bottom: 10px;
    }

    label {
      color: var(--text-secondary);
      font-size: 14px;
      margin-bottom: 4px;
      display: block;
    }

    input {
      width: 100%;
      padding: 10px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 10px;
      background: rgba(255, 255, 255, 0.05);
      color: #fff;
      font-size: 15px;
      transition: var(--transition);
    }

    input:focus {
      border-color: var(--accent);
      background: rgba(255, 255, 255, 0.1);
      box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.25);
      outline: none;
    }

    .hlist {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .hitem {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 14px;
      padding: 14px;
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.1);
      transition: var(--transition);
    }

    .hitem:hover {
      background: rgba(255, 255, 255, 0.08);
      transform: translateY(-2px);
    }

    .htitle {
      color: #fff;
      font-weight: 600;
      margin: 0;
    }

    .hsub {
      color: var(--text-secondary);
      font-size: 13px;
      margin-top: 4px;
    }

    .hact a {
      background: var(--accent);
      color: #fff;
      padding: 6px 12px;
      border-radius: 8px;
      text-decoration: none;
      font-size: 13px;
      font-weight: 500;
      transition: var(--transition);
    }

    .hact a:hover {
      background: var(--accent-hover);
    }

    /* Toast */
    .toast-wrap {
      position: fixed;
      top: 22px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 1000;
      display: flex;
      flex-direction: column;
      gap: 10px;
      pointer-events: none;
    }

    .toast {
      pointer-events: auto;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      min-width: 260px;
      padding: 10px 16px;
      border-radius: var(--radius);
      background: rgba(255, 255, 255, 0.15);
      color: #fff;
      border: 1px solid rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(8px);
      animation: toastIn 0.3s ease, toastOut 0.3s ease 4.6s forwards;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .toast-success {
      border-left: 4px solid var(--accent);
    }

    .toast-error {
      border-left: 4px solid var(--danger);
    }

    .toast .close {
      background: transparent;
      border: 0;
      cursor: pointer;
      color: #fff;
      font-size: 18px;
      opacity: 0.7;
      margin-left: 10px;
    }

    .toast .close:hover {
      opacity: 1;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
        filter: blur(6px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
      }
    }

    @keyframes toastIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes toastOut {
      0% {
        opacity: 1;
        transform: translateY(0);
      }

      100% {
        opacity: 0;
        transform: translateY(-10px);
      }
    }

    @media (max-width: 840px) {
      .grid {
        grid-template-columns: 1fr;
      }

      .card-body {
        padding: 20px;
      }
    }
  </style>
</head>

<body>

    <!-- Toast -->
    <div class="toast-wrap" id="toastWrap">
        <% const s = (typeof messages !== 'undefined' && messages.success) ? messages.success : []; %>
            <% const e = (typeof messages !== 'undefined' && messages.error) ? messages.error : []; %>
                <% if (s.length) { %>
                    <div class="toast toast-success">✅ <span><%= s[0] %></span>
                        <button class="close" aria-label="Tutup" onclick="this.parentElement.remove()">×</button>
                    </div>
                    <% } %>
                        <% if (e.length) { %>
                            <div class="toast toast-error">⚠️ <span><%= e[0] %></span>
                                <button class="close" aria-label="Tutup" onclick="this.parentElement.remove()">×</button>
                            </div>
                            <% } %>
    </div>

    <div class="container">
        <div class="card">
            <!-- Header -->
            <div class="card-head">
                <div class="avatar">
                    <%= (user && user.nama ? user.nama[0] : 'U').toUpperCase() %>
                </div>
                <div class="head-meta">
                    <h1 class="title">Profil <span class="pill">Akun</span></h1>
                    <div class="sub">
                        <%= user.email %>
                    </div>
                </div>
                <a href="/" class="btn btn-ghost">← Beranda</a>
            </div>

            <!-- Body -->
            <div class="card-body">
                <div class="grid">
                    <div class="info-block">
                        <div class="info-row">
                            <div class="label">Nama</div>
                            <div class="value">
                                <%= user.nama %>
                            </div>
                        </div>
                        <div class="info-row" style="margin-top:10px">
                            <div class="label">Email</div>
                            <div class="value">
                                <%= user.email %>
                            </div>
                        </div>
                    </div>

                    <div class="info-block">
                        <div class="info-row">
                            <div class="label">Dibuat</div>
                            <div class="value">
                                <%= (user.created_at ? new Date(user.created_at).toLocaleString() : '-') %>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="divider"></div>

                <!-- Aksi -->
                <div class="actions">
                    <button class="btn" id="togglePwd">Ubah Password</button>
                    <a class="back" href="/logres/logout" style="background:#fff;color:#ef4444;border:1px solid var(--line)">Keluar</a>
                </div>

                <!-- Collapsible Password Form -->
                <form id="pwdForm" class="collapse" method="POST" action="/profile/password" autocomplete="off" style="margin-top:12px">
                    <p class="legend">Ganti Password</p>
                    <label for="pwd-old">Password Lama</label>
                    <input id="pwd-old" type="password" name="current_password" autocomplete="current-password" required>
                    <label for="pwd-new" style="margin-top:8px">Password Baru</label>
                    <input id="pwd-new" type="password" name="new_password" minlength="6" autocomplete="new-password" required>
                    <div class="actions" style="margin-top:12px">
                        <button type="submit" class="btn">Simpan</button>
                        <button type="button" class="btn-link" id="cancelPwd">Batal</button>
                    </div>
                </form>

                <div class="divider"></div>

                <!-- RIWAYAT -->
                <h3 style="margin:0 0 10px;color:#0f172a">Riwayat Simpan</h3>

                <% const hist = (typeof items !== 'undefined' && Array.isArray(items)) ? items : []; %>
                    <% if (hist.length === 0) { %>
                        <div class="info-block" style="color:#64748b">Belum ada riwayat.</div>
                        <% } else { %>
                            <div class="hlist">
                                <% hist.forEach(h => { %>
                                    <div class="hitem">
                                        <div class="hmeta">
                                            <h4 class="htitle">
                                                <%= h.title || ('History #' + h.id_history) %>
                                            </h4>
                                            <div class="hsub">
                                                <span><strong><%= h.best_alt %></strong> (skor <%= Number(h.best_score).toFixed(6) %>)</span> ·
                                                <span><%= h.total_alt %> alternatif</span> ·
                                                <span><%= new Date(h.created_at).toLocaleString() %></span>
                                            </div>
                                        </div>
                                        <div class="hact">
                                            <a class="btn btn-small" href="/?history=<%= h.id_history %>">Muat di Beranda</a>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                            <% } %>

            </div>
        </div>
    </div>

    <script>
        // Toggle form password
        const toggleBtn = document.getElementById('togglePwd');
        const formPwd = document.getElementById('pwdForm');
        const cancelBtn = document.getElementById('cancelPwd');
        if (toggleBtn) {
            toggleBtn.addEventListener('click', () => {
                formPwd.classList.toggle('open');
                if (formPwd.classList.contains('open')) {
                    document.getElementById('pwd-old').focus();
                }
            });
        }
        if (cancelBtn) {
            cancelBtn.addEventListener('click', () => formPwd.classList.remove('open'));
        }

        // Auto-dismiss toast + pause on hover
        document.querySelectorAll('.toast').forEach(t => {
            let outTimer = setTimeout(() => t.remove(), 3800);
            t.addEventListener('mouseenter', () => {
                t.style.animationPlayState = 'paused';
                clearTimeout(outTimer);
            });
            t.addEventListener('mouseleave', () => {
                t.style.animationPlayState = 'running';
                outTimer = setTimeout(() => t.remove(), 1200);
            });
        });
    </script>
</body>

</html>